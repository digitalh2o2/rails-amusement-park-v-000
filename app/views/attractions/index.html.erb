<h1>Attractions</h1>
<ul>
	<% @attractions.each do |attraction| %>
		<% if current_user.admin? %>
			<li><%= link_to "Show #{attraction.name}", attraction_path(attraction) %> 
		<% else %>
			<%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></li>
		<% end %>
	<% end %>
	
	<li><%= link_to "New Attraction", new_attraction_path %></li>
	
</ul>