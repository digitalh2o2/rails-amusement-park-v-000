<%= form_for @attraction do |f| %>
	<p><%= f.label :name %></p>
	<%= f.text_field :name %>

	<p><%= f.label "Height Requirement" %></p>
	<%= f.number_field :min_height %>

	<p><%= f.label "How fun is it?" %></p>
	<%= f.number_field :happiness_rating %>

	<p><%= f.label "How nausea-inducing is it?" %></p>
	<%= f.number_field :nausea_rating %>

	<p><%= f.label "How many tickets does it cost?" %></p>
	<%= f.number_field :tickets %>
	<br>
	<%= f.submit %>
<% end %>